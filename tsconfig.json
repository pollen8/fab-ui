{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "keyofStringsOnly": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "./dist/types",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "target": "es5",
    "types": [
      "node", // to avoid ts complation errors with @types/styled-components https://github.com/DefinitelyTyped/DefinitelyTyped/issues/33015,
    ]
  },
  "include": [
    "./src/interfaces.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.spec.*"
  ]
}